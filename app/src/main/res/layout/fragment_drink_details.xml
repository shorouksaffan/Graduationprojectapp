<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/drink_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/details" />


    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="176dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/drink_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iced Coffee Sweet Heaven"
            android:textColor="#A0522D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drink_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Double espresso with condensed milk, served cold"
            android:textColor="#7A7A7A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/drink_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Rp 24.000"
            android:textColor="#A0522D"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quantity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_above="@id/btnContinue"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:textColor="@android:color/white"
            app:backgroundTint="#A0522D"
            app:cornerRadius="50dp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="1"
            android:textSize="16sp"
            android:textColor="#A0522D" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="@android:color/white"
            app:backgroundTint="#A0522D"
            app:cornerRadius="50dp" />
    </LinearLayout>

    <!-- زر Buy Now تحت في اليمين -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:text="Buy Now"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:backgroundTint="#A0522D"
        app:cornerRadius="50dp" />

</RelativeLayout>
